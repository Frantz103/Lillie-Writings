{
  "name": "lillie-writings",
  "version": "0.1.0",
  "description": "Privacy-friendly writing assistant for macOS with English and French support",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build:main:watch\" \"npm run build:renderer:watch\" \"wait-on dist/main/main.js dist/renderer/index.html && electron .\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:main:watch": "tsc -p tsconfig.main.json --watch",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:renderer:watch": "webpack --config webpack.renderer.config.js --watch",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "keywords": [
    "writing",
    "assistant",
    "grammar",
    "electron",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "eslint": "^8.56.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "franc-min": "^6.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  }
}
